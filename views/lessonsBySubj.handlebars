{{#if loggedIn}}
   {{> navbar}}

     {{> filterLessons}}

     <div class="container">
         
         <div class="row ">
             <div class="col less-col-name date">
                 <p>Date</p>
                </div>
                <div class="col less-col-name lessonName">
                    <p>Lesson Name</p>
                </div>
            
         </div>
         {{#each lessons as |lesson|}}
         <div class="row viewLessRow">
             <div class="col date">
                 <p>{{lesson_date}}</p>
                </div>
                <div class="col lessName">
                    <a href="/lesson-plans/{{id}}" style="text-decoration: inherit; color: inherit;">{{lesson.lesson_name}}</a>
                </div> 
         </div>
         {{/each}}
     </div>
      
      
<script src ='/javascript/lessonplans.js'></script>
{{/if}}